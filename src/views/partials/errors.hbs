{{#if error}}
  <div class="alert alert-dismissible alert-danger fade show">
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
    {{error}}
  </div>

{{/if}}

{{#each errors}}
  <div class="alert alert-dismissible alert-danger fade show">
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
    {{text}}
  </div>
{{/each}}