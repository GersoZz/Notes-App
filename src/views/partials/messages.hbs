{{#if success_msg}}
  <div class="alert alert-dismissible alert-secondary fade show">
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    {{success_msg}}
  </div>
{{/if}}

{{#if error_msg}}
  <div class="alert alert-dismissible alert-danger fade show">
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    {{error_msg}}
  </div>
{{/if}}